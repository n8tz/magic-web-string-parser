#!/usr/bin/env node
'use strict';
const fs            = require('fs'),
      argz          = require('minimist')(process.argv.slice(2)),
      data          = argz.input || argz.i || fs.readFileSync(0, 'utf-8').replace(/[\n\r]*$/, ""),
      decEverything = require('../');
let output;

if ( !data.length )
	throw "No input data"

output = decEverything.parse(data);

if ( process.argv.includes("--stats") )
	console.log(decEverything.printStats(output))
else if ( process.argv.includes("--vars") )
	console.log(decEverything.printVars(output))
else
	console.log(decEverything.printVarTree(output))
